<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:background="#FFFFFF"
                android:descendantFocusability="blocksDescendants"
                android:fillViewport="true"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="15dp"
                        android:text="Election Candidates of India"
                        android:textColor="#000"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                <GridLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/grid"
                        android:orientation="vertical"
                        >


                    <android.support.v7.widget.CardView
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp"
                            tools:ignore="MissingClass">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                            <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent">

                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"

                                        android:src="@drawable/pic1">

                                </ImageView>


                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Narendra Modi"
                                        android:textColor="#000000"

                                        android:textSize="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:textStyle="bold">
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Bhartiya Janta Partiy "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Current Prime Minister of India "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Rajkot "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>

                            </LinearLayout>


                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp"
                            >
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                            <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent">

                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"

                                        android:src="@drawable/rahulgandhi">

                                </ImageView>


                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Rahul Gandhi"
                                        android:textColor="#000000"

                                        android:textSize="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:textStyle="bold">
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Indian National Congress"
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="President of INC "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Amethi "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>

                            </LinearLayout>


                        </LinearLayout>



                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp"
                            >
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                            <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent">

                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"

                                        android:src="@drawable/mayawati">

                                </ImageView>


                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Mayawati Prabhu Das"
                                        android:textColor="#000000"

                                        android:textSize="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:textStyle="bold">
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Bahujan Samaj Party"
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Formal Chief Minister of UP "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Ambedhar Nager "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>

                            </LinearLayout>


                        </LinearLayout>



                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp"
                            tools:ignore="MissingClass">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                            <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent">

                                <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"

                                        android:src="@drawable/raja">

                                </ImageView>


                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Doraisamy Raja"
                                        android:textColor="#000000"

                                        android:textSize="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:textStyle="bold">
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Communits Party of India "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="General Secratary of CPI "
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:text="Rasipuram"
                                        android:textColor="#000000"

                                        android:textSize="13dp"
                                        android:layout_marginLeft="10dp"
                                        >
                                </TextView>

                            </LinearLayout>


                        </LinearLayout>



                    </android.support.v7.widget.CardView>




                </GridLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>






</LinearLayout>